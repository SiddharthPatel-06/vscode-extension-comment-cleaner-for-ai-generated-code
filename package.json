{
  "name": "comment-cleaner",
  "displayName": "CommentsCleaner",
  "description": "Use this extension to quickly remove all AI-generated comments at once, except the important ones starting with //!, saving your time and effort.",
  "publisher": "CommentCleaner",
  "version": "0.0.23",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:json",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:markdown",
    "onLanguage:reactnative",
    "onLanguage:java",
    "onLanguage:cpp",
    "onLanguage:c",
    "onLanguage:python",
    "onLanguage:php",
    "onLanguage:go",
    "onLanguage:ruby",
    "onLanguage:swift",
    "onLanguage:kotlin",
    "onLanguage:scala",
    "onLanguage:r",
    "onLanguage:perl",
    "onLanguage:rust",
    "onLanguage:lua",
    "onLanguage:sh",
    "onLanguage:yaml",
    "onLanguage:xml",
    "onLanguage:sql",
    "onLanguage:dart"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "comment-cleaner.removeComments",
        "title": "Remove All Comments Except '//!'"
      }
    ],
    "keybindings": [
      {
        "command": "comment-cleaner.removeComments",
        "key": "ctrl+alt+s",
        "when": "editorTextFocus"
      }
    ]
  },
  "keywords": [
    "comment cleaner",
    "remove comments",
    "ai comments",
    "clean code",
    "code comments"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.0.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
   "repository": {
    "type": "git",
    "url": "https://github.com/SiddharthPatel-10/vscode-extension-comment-cleaner-for-ai-generated-code.git"
  }
}
